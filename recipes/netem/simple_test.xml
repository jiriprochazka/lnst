<lnstrecipe>
    <network>
        <host id="machine1">
            <interfaces>
                <eth id="testiface" label="testnet">
                    <netem>
                        <delay>
                            <options>
                                <option name="time" value="50ms" />
                                <option name="jitter" value="10ms" />
                                <option name="correlation" value="50%" />
                                <option name="distribution" value="normal" />
                            </options>
                        </delay>
                        <corrupt>
                            <options>
                                <option name="percent" value="10%" />
                                <option name="correlation" value="25%" />
                            </options>
                        </corrupt>
                        <reordering>
                            <options>
                                <option name="percent" value="10%" />
                                <option name="correlation" value="25%" />
                            </options>
                        </reordering>
                        <loss>
                            <options>
                                <option name="percent" value="45%" />
                                <option name="correlation" value="15%" />
                            </options>
                        </loss>
                    </netem>
                    <addresses>
                        <address>192.168.101.10/24</address>
                    </addresses>
                </eth>
            </interfaces>
        </host>
        <host id="machine2">
            <interfaces>
                <eth id="testiface" label="testnet">
                    <addresses>
                        <address>192.168.101.11/24</address>
                    </addresses>
                    <netem>
                        <loss>
                            <options>
                                <option name="percent" value="15%" />
                                <option name="correlation" value="15%" />
                            </options>
                        </loss>
                        <duplication>
                            <options>
                                <option name="percent" value="10%" />
                                <option name="correlation" value="25%" />
                            </options>
                        </duplication>
                    </netem>
                </eth>
            </interfaces>
        </host>
    </network>
    <task python="simple_test.py"/>
</lnstrecipe>
